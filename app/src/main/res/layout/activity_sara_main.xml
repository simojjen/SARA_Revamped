<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SaraMain"
    android:id="@+id/root"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/arrows"
        android:scaleY=".5"
        android:scaleX=".5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/ivGasPedal"
            android:background="@drawable/gasbutton"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivPhoneIcon"
            android:background="@drawable/phoneicon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleX=".5"
            android:scaleY=".5"
            />
    </RelativeLayout>

</RelativeLayout>
