<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SaraMain"
    android:id="@+id/root"
    android:background="@drawable/newbg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/arrows"
        android:scaleY=".6"
        android:scaleX=".6"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/ivGasPedal"
            android:background="@drawable/gasbutton"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivPhoneIcon"
            android:background="@drawable/phoneicon"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleX=".5"
            android:scaleY=".5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="debug"
            android:id="@+id/debug"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="NOT CONNECTED"
            android:id="@+id/tConnected"
            android:textColor="#ffff001f"
            android:layout_above="@+id/tRecieved"
            android:layout_alignParentStart="true"
            android:textSize="20dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bMenu"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@android:drawable/ic_menu_manage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100%"
            android:id="@+id/tRecieved"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="170dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imVisare"
            android:background="@drawable/visare"
            android:layout_marginLeft="220dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="240dp"
            />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekSteering"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:max="100"
            android:progress="50"
            android:indeterminate="false"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp" />

    </RelativeLayout>

</RelativeLayout>
